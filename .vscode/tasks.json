  "version": "0.1.0",  
  "tasks": [
    {
      "taskName": "tsc",
      "command": "node",
      "isShellCommand": true,
      "args": [
        "./node_modules/typescript/lib/tsc.js",
        "-w",
        "-p",
        "."
      ],
      "showOutput": "silent",
      "isBackground": true,
      "problemMatcher": "$tsc-watch"
    }
  ]
}