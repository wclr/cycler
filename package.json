    "@cycle/xstream-run": "^4.1.0",
    "@types/express": "^4.0.32",
    "@types/ramda": "0.0.1",
    "@types/superagent": "^2.0.32",
    "@types/supertest": "^1.1.30",
    "@types/tape": "^4.2.27",
    "browserify": "^13.0.1",
    "budo": "^8.4.0",
    "eachdir": "^1.0.1",
    "express": "^4.14.0",
    "get-port": "^2.1.0",
    "most": "^1.0.1",
    "node-dev": "^3.1.3",
    "ramda": "^0.22.1",
    "rx": "^4.0.7",
    "rxjs": "^5.0.0-rc.4",
    "source-map-support": "^0.4.2",
    "supertest": "^2.0.0",
    "tap-browser-color": "^0.1.2",
    "tape": "^4.4.0",
    "typescript": "2.2.0-dev.20161116",
    "validate-commit-msg": "^2.8.2",
    "watchify": "^3.7.0",
    "xstream": "^9.0.0",
    "typings": "^2.1.0"
  },
  "scripts": {
    "build-dev-image": "docker build -t cycler-dev-node .",
    "rebuild-dev-image": "docker build -t cycler-dev-node --no-cache .",
    "install-deps": "sh .scripts/install-deps.sh",    
    "tsc-build": "sh .scripts/wait-install-deps.sh && tsc",
    "tsc-build-watch": "sh .scripts/wait-install-deps.sh && sh .scripts/fix-tsc-watch.sh && tsc -w",    
    "test-watch-package": "sh .scripts/wait-install-deps.sh && sh .scripts/test-watch-package.sh",
    "test-package": "sh .scripts/wait-install-deps.sh && sh .scripts/test-package.sh",    
    "docker-test-package": "docker-compose run -T -e RUN_ONCE=true",
    "dev": "yarn run build-dev-image && docker-compose up",
    "dev-deps": "yarn run dev deps-install tsc-build",
    "ci": "typings install && bash ./.scripts/publish-packages.sh"    
  }  
}
