{
  "name": "cycler",
  "license": "MIT",
  "private": true,
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "workspaces": [
    "*"
  ],
  "scripts": {
    "commit": "git-cz",
    "cm": "git-cz",
    "_build:watch": "concurrently \"ts-purify -w\" \"tsc -p tsconfig.build.json -w\"",
    "build:watch": "concurrently \"tsc --w\" \"ts-cleaner -w -v\"",
    "propagate-config": "node .scripts/propagate-config",
    "test": "node .scripts/test",
    "test-watch": "node .scripts/test --watch",
    "release": "node .scripts/docker-run \"node .scripts/release-\"",
    "docker-test": "node .scripts/docker-run \"node .scripts/test\"",
    "docker-watch": "node .scripts/docker-run \"node .scripts/test --watch\"",
    "_clean": "del-cli **/*.js **/*.js.map **/*.d.ts \"!node_modules/**\"",
    "clean": "ts-clean-built --old",
    "install-deps": "node .scripts/install-deps",
    "build-watch": ".scripts/cleanup-built-files.sh && .scripts/wait-install-deps.sh && .scripts/fix-tsc-watch.sh && tsc -w",
    "ci": "yarn && tsc -p .scripts && yarn install-deps && tsc && yarn docker-test",
    "preyalc": "ts-clean-built"
  },
  "devDependencies": {
    "@cycle/rxjs-run": "^10.5.0",
    "@types/chai": "^4.2.11",
    "@types/express": "^4.0.32",
    "@types/fs-extra": "^2.1.0",
    "@types/minimist": "^1.2.0",
    "@types/mocha": "^7.0.2",
    "@types/ramda": "^0.27.6",
    "@types/superagent": "^2.0.32",
    "@types/supertest": "^1.1.30",
    "@types/tape": "^4.2.27",
    "browserify": "^13.0.1",
    "budo": "^8.4.0",
    "chai": "^4.2.0",
    "commitizen": "^4.1.2",
    "concurrently": "^5.2.0",
    "cz-customizable": "^6.2.0",
    "del-cli": "^0.2.1",
    "express": "^4.15.2",
    "fs-extra": "^2.1.2",
    "get-port": "^2.1.0",
    "husky": "^0.13.3",
    "minimist": "^1.2.0",
    "mocha": "^8.0.1",
    "most": "^1.0.1",
    "node-dev": "^3.1.3",
    "prettier": "^2.0.5",
    "ramda": "^0.27.0",
    "rxjs": "^5.2.0",
    "source-map-support": "^0.4.2",
    "supertest": "^2.0.0",
    "tap-browser-color": "^0.1.2",
    "tape": "^4.4.0",
    "ts-node-dev": "^1.0.0-pre.40",
    "tslint": "^4.5.1",
    "typescript": "^3.9.5",
    "validate-commit-msg": "^2.8.2",
    "watchify": "^3.7.0",
    "xstream": "^11.12.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": "./.cz-config.js"
    }
  },
  "dependencies": {
    "@cycle/dom": "^22.7.0",
    "@cycle/isolate": "^5.2.0",
    "@cycle/most-run": "^8.4.0",
    "@cycle/run": "^5.4.0",
    "isolate": "^0.14.0",
    "ts-clean-built": "file:.yalc/ts-clean-built"
  }
}
