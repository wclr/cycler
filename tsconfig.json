{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["dom", "es6"],
    "esModuleInterop": true,
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "preserveConstEnums": true,
    "newLine": "LF",
    "inlineSourceMap": true,
    "inlineSources": true
  },
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2
  }  
}
