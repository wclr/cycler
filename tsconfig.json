{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["dom", "es6"],
    "esModuleInterop": true,
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "preserveConstEnums": true,
    "newLine": "LF",
    "inlineSourceMap": true,
    "inlineSources": true
  },
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2
  },
  "include": [
    ".scripts/**/*",
    "express/**/*",
    "hmr/**/*",
    "forage/**/*",
    "mongodb/**/*",
    "logger/**/*",
    "state/**/*",
    "spy/**/*",
    "task/**/*",
    "telegraf/**/*"
  ],
  "_exclude": ["**/node_modules/*"]
}
