{
  "compilerOptions": {
    "module": "commonjs",
    "removeComments": false,
    "strictNullChecks": true,
    "declaration": true,
    "target": "es5",
    "preserveConstEnums": true,
    "noImplicitAny": true,    
    "lib": ["dom", "es6"],    
    "traceResolution": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "skipLibCheck": true,
    "noImplicitThis": true,
    "noImplicitReturns": true
  },
    "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2
  },    
	"include": [
		"**/*",
		".scripts/**/*"
	],
  "exclude": [
    "**/node_modules/*"
  ]
}