{
  "compilerOptions": {
    "module": "commonjs",
    "removeComments": false,
    "strictNullChecks": true,
    "declaration": true,
    "target": "es5",
    "preserveConstEnums": true,
    "noImplicitAny": true,    
    "lib": ["dom", "es6"],
    "sourceMap": true,
    "traceResolution": false,
    "inlineSourceMap": true,
    "inlineSources": true
  },
    "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2
  },  
  "exclude": [
    "**/node_modules/*",    
    "hmr/test/*"
  ]
}